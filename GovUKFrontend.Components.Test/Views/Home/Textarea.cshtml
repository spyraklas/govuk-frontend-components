@model TextareaModel
@{
    ViewData["Title"] = "Text area Component";
}

<form method="post" asp-action="Textarea">
    <gds-row id="main-content" class="govuk-body" title="Main Content">
        <gds-column id="main-content-left-column" style="TwoThirds" class="govuk-body" title="Main Content Column">

            <gds-caption id="heading-caption" size="Large" title="">Testing Textarea Component</gds-caption>
            <gds-heading type="H1" size="Large">Test Project for GDS Components</gds-heading>

            <gds-row id="textarea-validation-test-content" class="govuk-body" title="Input Test Content">
                <gds-column style="Full">
                    <gds-textarea id="InputTest" name="InputTest" class="test-class" value="@Model.InputTest" model-state="@ViewBag.ModelState" rows="5">
                        <gds-label for="InputTest" class="custom-label-class" size="Large" Tag="H3" title="this is a label title test">Test Textarea with Validation:</gds-label>
                        <gds-hint name="InputTest" class="custom-hint-class" title="this is a test of a GDS Hint title">this is a test of a GDS Textarea control</gds-hint>
                        <gds-error-messages model-state="@ViewBag.ModelState" for="InputTest"></gds-error-messages>
                    </gds-textarea>                   
                    <gds-button id="submit-button" name="submit-button" button-type="Submit" button-style="Primary" title="Submit Button">Submit</gds-button>
                </gds-column>
            </gds-row>

            <gds-row id="textarea-character-count-test-content" class="govuk-body" title="Input Test Content">
                <gds-column style="Full">
                    <gds-textarea id="CharacterCount" name="CharacterCount" class="test-class" value="@Model.CharacterCount" model-state="@ViewBag.ModelState" rows="5" count="Character" max-count="100">
                        <gds-label for="CharacterCount" class="custom-label-class" size="Large" Tag="H3" title="this is a label title test">Test Textarea with Character Count:</gds-label>
                        <gds-hint name="CharacterCount" class="custom-hint-class" title="this is a test of a GDS Hint title">this is a test of a GDS Textarea control</gds-hint>
                        <gds-error-messages model-state="@ViewBag.ModelState" for="CharacterCount"></gds-error-messages>
                    </gds-textarea>
                </gds-column>
            </gds-row>

            <gds-row id="textarea-word-count-test-content" class="govuk-body" title="Input Test Content">
                <gds-column style="Full">
                    <gds-textarea id="WordCount" name="WordCount" class="test-class" value="@Model.WordCount" model-state="@ViewBag.ModelState" rows="5" count="Word" max-count="20">
                        <gds-label for="WordCount" class="custom-label-class" size="Large" Tag="H3" title="this is a label title test">Test Textarea with Word Count:</gds-label>
                        <gds-hint name="WordCount" class="custom-hint-class" title="this is a test of a GDS Hint title">this is a test of a GDS Textarea control</gds-hint>
                        <gds-error-messages model-state="@ViewBag.ModelState" for="WordCount"></gds-error-messages>
                    </gds-textarea>
                </gds-column>
            </gds-row>

        </gds-column>
        <gds-column id="main-content-right-column" class="govuk-body" style="OneThird" title="Main Content Right Column">

            <img src="https://dfeconnect.education.gov.uk/images/dfe-logo-alt.png" height="120px" alt="DfE logo" title="Dfe Logo" />
            <br /><br />
            <partial name="_Menu" />

        </gds-column>
    </gds-row>
</form>